# Corallum Enterprise Production Environment Configuration
# Copy this file to .env and configure your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=8003
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:3002,https://yourdomain.com

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=corallum_enterprise
DB_USER=corallum
DB_PASSWORD=corallum123
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# AI Configuration (LangChain)
AI_PROVIDER=ollama
AI_MODEL=llama2
AI_BASE_URL=http://localhost:11434
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key

# RAG Configuration
RAG_ENABLED=true
KNOWLEDGE_BASE_PATH=./knowledge-base
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_DOCUMENTS=5

# Inngest Configuration
INNGEST_API_KEY=your_inngest_api_key
INNGEST_BASE_URL=https://api.inngest.com
INNGEST_EVENT_KEY=your_inngest_event_key
INNGEST_SIGNING_KEY=your_inngest_signing_key

# SSO Configuration
SAML_ENABLED=false
SAML_IDP_URL=
SAML_IDP_CERT=
OIDC_ENABLED=false
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER=

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret
CORS_ORIGIN=http://localhost:3002

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/enterprise.log

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@corallum.com

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# External Integrations
STRIPE_API_KEY=
SLACK_WEBHOOK_URL=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Development Configuration
DEV_MODE=false
DEBUG_SQL=false
DEBUG_AI=false
